{
  "private": true,
  "name": "bracketbear-website",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"npm run dev --workspace=@bracketbear/core\" \"npm run dev --workspace=@bracketbear/flateralus\" \"npm run dev --workspace=@bracketbear/flateralus-pixi-animations\" \"npm run dev --workspace=@bracketbear/flateralus-p5-animations\" \"npm run dev --workspace=@bracketbear/flateralus-react\"  \"npm run dev --workspace=@bracketbear/flateralus-pixi\"  \"npm run dev --workspace=@bracketbear/flateralus-p5\"  \"npm run dev --workspace=@bracketbear/cms\"  \"npm run dev --workspace=@bracketbear/bracketbear-website\" \"npm run dev --workspace=@bracketbear/portfolio\"",
    "build": "npm run build --workspace=@bracketbear/core --workspace=@bracketbear/flateralus --workspace=@bracketbear/flateralus-pixi-animations --workspace=@bracketbear/flateralus-p5-animations --workspace=@bracketbear/flateralus-react --workspace=@bracketbear/flateralus-pixi --workspace=@bracketbear/flateralus-p5 --workspace=@bracketbear/tw-pattern-analyzer --workspace=@bracketbear/bracketbear-website --workspace=@bracketbear/portfolio",
    "preview:bracketbear": "npm run preview --workspace=@bracketbear/bracketbear-website",
    "preview:portfolio": "npm run preview --workspace=@bracketbear/portfolio",
    "analyze:tw": "npm run build --workspace=@bracketbear/tw-pattern-analyzer && npm run analyze --workspace=@bracketbear/tw-pattern-analyzer",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:staged": "prettier --write --ignore-unknown",
    "format:interactive": "./scripts/format-code.sh",
    "format:auto": "./scripts/format-code-auto.sh",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0",
    "scan:css": "node scripts/find-arbitrary-css.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "type-check": "npm run type-check --workspace=@bracketbear/core --workspace=@bracketbear/flateralus --workspace=@bracketbear/flateralus-pixi-animations --workspace=@bracketbear/flateralus-p5-animations --workspace=@bracketbear/flateralus-react --workspace=@bracketbear/flateralus-pixi --workspace=@bracketbear/flateralus-p5 --workspace=@bracketbear/tw-pattern-analyzer --workspace=@bracketbear/portfolio",
    "prepare": "husky"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitest/ui": "^2.1.8",
    "astro-eslint-parser": "^1.2.2",
    "concurrently": "^8.2.1",
    "eslint": "^9.30.0",
    "eslint-config-love": "^121.0.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "jsonc-eslint-parser": "^2.4.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,astro,css,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
