{
  "private": true,
  "name": "bracketbear-website",
  "version": "2.0.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"npm run dev --workspace=@bracketbear/bear-ui\" \"npm run dev --workspace=@bracketbear/bear-ui-tailwind\" \"npm run dev --workspace=@bracketbear/bear-ui-react\" \"npm run dev --workspace=@bracketbear/core\" \"npm run dev --workspace=@bracketbear/flateralus\" \"npm run dev --workspace=@bracketbear/flateralus-pixi-animations\" \"npm run dev --workspace=@bracketbear/flateralus-p5-animations\" \"npm run dev --workspace=@bracketbear/flateralus-react\"  \"npm run dev --workspace=@bracketbear/flateralus-pixi\"  \"npm run dev --workspace=@bracketbear/flateralus-p5\"  \"npm run dev --workspace=@bracketbear/cms\"  \"npm run dev --workspace=@bracketbear/bracketbear-website\" \"npm run dev --workspace=@bracketbear/portfolio\"",
    "build": "npm run build --workspace=@bracketbear/bear-ui --workspace=@bracketbear/bear-ui-tailwind --workspace=@bracketbear/bear-ui-react --workspace=@bracketbear/core --workspace=@bracketbear/flateralus --workspace=@bracketbear/flateralus-pixi-animations --workspace=@bracketbear/flateralus-p5-animations --workspace=@bracketbear/flateralus-react --workspace=@bracketbear/flateralus-pixi --workspace=@bracketbear/flateralus-p5 --workspace=@bracketbear/tw-pattern-analyzer --workspace=@bracketbear/bracketbear-website --workspace=@bracketbear/portfolio",
    "preview:bracketbear": "npm run preview --workspace=@bracketbear/bracketbear-website",
    "preview:portfolio": "npm run preview --workspace=@bracketbear/portfolio",
    "analyze:tw": "npm run build --workspace=@bracketbear/tw-pattern-analyzer && npm run analyze --workspace=@bracketbear/tw-pattern-analyzer",
    "generate:repo-map": "node scripts/generate-repo-map.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:staged": "prettier --write --ignore-unknown",
    "format:interactive": "./scripts/format-code.sh",
    "format:auto": "./scripts/format-code-auto.sh",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0",
    "scan:css": "node scripts/find-arbitrary-css.js",
    "test": "vitest --run",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "type-check": "npm run type-check --workspace=@bracketbear/bear-ui --workspace=@bracketbear/bear-ui-tailwind --workspace=@bracketbear/bear-ui-react --workspace=@bracketbear/core --workspace=@bracketbear/flateralus --workspace=@bracketbear/flateralus-pixi-animations --workspace=@bracketbear/flateralus-p5-animations --workspace=@bracketbear/flateralus-react --workspace=@bracketbear/flateralus-pixi --workspace=@bracketbear/flateralus-p5 --workspace=@bracketbear/tw-pattern-analyzer --workspace=@bracketbear/portfolio",
    "prepare": "husky",
    "deploy:portfolio": "./scripts/deploy.sh portfolio",
    "deploy:bracketbear": "./scripts/deploy.sh bracketbear",
    "deploy:all": "./scripts/deploy.sh all",
    "rollback": "./scripts/deploy.sh rollback",
    "version:patch": "npm version patch && node scripts/sync-versions.js",
    "version:minor": "npm version minor && node scripts/sync-versions.js",
    "version:major": "npm version major && node scripts/sync-versions.js",
    "sync:versions": "node scripts/sync-versions.js",
    "test:deploy": "./scripts/test-deploy.sh",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "check:all": "./scripts/pre-merge-check.sh",
    "check:format": "npm run format:check",
    "check:lint": "npm run lint:check",
    "check:types": "npm run type-check",
    "check:tests": "npm run test:run",
    "check:build": "npm run build",
    "check:deps": "npm audit --audit-level=high",
    "check:quick": "npm run format:check && npm run lint:check && npm run type-check",
    "check:ci": "npm run check:format && npm run check:lint && npm run check:types && npm run check:tests && npm run check:build"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^9.1.5",
    "@storybook/addon-docs": "^9.1.5",
    "@storybook/react-vite": "^9.1.5",
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitest/ui": "^2.1.8",
    "astro-eslint-parser": "^1.2.2",
    "concurrently": "^8.2.1",
    "eslint": "^9.30.0",
    "eslint-config-love": "^121.0.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-storybook": "9.1.5",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "jsonc-eslint-parser": "^2.4.0",
    "lint-staged": "^16.1.5",
    "netlify-cli": "^23.5.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "storybook": "^9.1.5",
    "tailwindcss": "^4.1.13",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,astro,css,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
