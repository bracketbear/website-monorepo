{
  "private": true,
  "name": "bracketbear-website",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"npm run dev --workspace=@bracketbear/core\" \"npm run dev --workspace=@bracketbear/cms\"  \"npm run dev --workspace=@bracketbear/bracketbear-website\" \"npm run dev --workspace=@bracketbear/portfolio\"",
    "build": "npm run build --workspace=@bracketbear/core --workspace=@bracketbear/bracketbear-website --workspace=@bracketbear/portfolio",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0"
  },
  "dependencies": {
    "18": "^0.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "astro-eslint-parser": "^1.2.2",
    "concurrently": "^8.2.1",
    "eslint": "^9.30.0",
    "eslint-config-love": "^121.0.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-prettier": "^5.5.1",
    "jsonc-eslint-parser": "^2.4.0",
    "prettier": "^3.6.2"
  }
}
