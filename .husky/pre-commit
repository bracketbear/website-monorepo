#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Branch protection: Prevent commits to dev and main
current_branch=$(git branch --show-current)
protected_branches="dev main"

for branch in $protected_branches; do
  if [ "$current_branch" = "$branch" ]; then
    echo "âŒ Direct commits to '$branch' branch are not allowed!"
    echo "ğŸ’¡ Please create a feature branch and use pull requests instead."
    echo "   Example: git checkout -b feature/your-feature-name"
    exit 1
  fi
done

echo "âœ… Branch protection check passed. Running lint-staged..."
npx lint-staged
