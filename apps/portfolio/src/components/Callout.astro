---
interface Props {
  title: string;
  tone?: 'neutral' | 'info' | 'warning' | 'success';
  className?: string;
}

const { title, tone = 'neutral', className = '' } = Astro.props;

const toneClasses = {
  neutral: 'border-brand-dark/40 bg-brand-dark/50',
  info: 'border-brand-blue/40 bg-brand-blue/10',
  warning: 'border-brand-orange/40 bg-brand-orange/10',
  success: 'border-brand-green/40 bg-brand-green/10',
};
---

<div class={`border rounded-md p-6 ${toneClasses[tone]} ${className}`}>
  <h3 class="font-heading mb-4 text-xl font-black tracking-tight text-white uppercase">
    {title}
  </h3>
  <slot />
</div>
