---
export interface Props {
  variant?: 'default' | 'brand' | 'warn';
  className?: string;
}

const { variant = 'default', className = '' } = Astro.props;

const variantClasses = {
  default: 'border-l-border bg-muted/50',
  brand: 'border-l-brand-orange bg-brand-orange/10',
  warn: 'border-l-brand-red bg-brand-red/10',
};
---

<div
  class={`border-l-4 ${variantClasses[variant]} rounded-r-lg p-4 ${className}`}
>
  <div class="text-muted-foreground text-sm">
    <slot />
  </div>
</div>
