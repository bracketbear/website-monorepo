---
interface Props {
  title: string;
  tone?: 'neutral' | 'info' | 'warning' | 'success';
  className?: string;
}

const { title, tone = 'neutral', className = '' } = Astro.props;

const toneClasses = {
  neutral: 'border-border/40 bg-muted/50',
  info: 'border-border/40 bg-card/10',
  warning: 'border-border/40 bg-primary/10',
  success: 'border-border/40 bg-muted/10',
};
---

<div class={`border rounded-md p-6 ${toneClasses[tone]} ${className}`}>
  <h3
    class="font-heading text-foreground mb-4 text-xl font-black tracking-tight uppercase"
  >
    {title}
  </h3>
  <slot />
</div>
