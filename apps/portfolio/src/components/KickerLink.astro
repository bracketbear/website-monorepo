---
export interface Props {
  href: string;
  children: string;
  external?: boolean;
  className?: string;
}

const { href, children, external = false, className = '' } = Astro.props;
---

<a
  href={href}
  class={`inline-flex items-center gap-2 text-sm font-medium text-brand-orange hover:text-brand-orange/80 transition-colors link-underline ${className}`}
  target={external ? '_blank' : undefined}
  rel={external ? 'noopener noreferrer' : undefined}
>
  {children}
  {
    external && (
      <svg
        class="h-3 w-3"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
        />
      </svg>
    )
  }
</a>
