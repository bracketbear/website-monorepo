---
import { LayeredLayout, NavBar } from '@bracketbear/core';
import { navigationConfig } from '@/config/navigation';
import { makeTitle } from '@/config/page-meta';

import '@/styles/global.css';

interface Props {
  title?: string;
  hideContactForm?: boolean;
  hideFooter?: boolean;
  breadcrumbs?: any;
  metaDescription?: string;
}

const { title, hideContactForm, hideFooter, breadcrumbs, metaDescription } =
  Astro.props;

const pageTitle = makeTitle(title);
---

<LayeredLayout
  title={pageTitle}
  hideContactForm={hideContactForm}
  hideFooter={hideFooter}
  hideNavigation={true}
  navigation={navigationConfig}
  breadcrumbs={breadcrumbs}
  metaDescription={metaDescription}
>
  <!-- Transparent Navigation -->
  <div class="relative z-50">
    <NavBar config={navigationConfig} variant="ghost-dark" />
  </div>

  <!-- Main content with consistent background -->
  <div class="bg-brand-orange-light min-h-screen">
    <slot />
  </div>
</LayeredLayout>
