---
import { navigationConfig } from '@/config/navigation';
import {
  ContentLayout as CoreContentLayout,
  NavBar,
} from '@bracketbear/core/astro';
import type { ContentLayoutProps } from '@bracketbear/core/astro';
import '@/styles/global.css';

interface Props extends Omit<ContentLayoutProps, 'navigation'> {}

const props = Astro.props;
---

<CoreContentLayout
  navigation={navigationConfig}
  contentWidth={props.contentWidth}
  {...props}
>
  <slot />
  <!-- Detail Blocks - we're passing it down to the core component -->
  <slot name="detail-blocks" slot="detail-blocks" />
  <slot name="cover-image" slot="cover-image" />
  <!-- Navigation slot -->
  <slot name="navigation" slot="navigation">
    <div class="relative z-50">
      <NavBar config={navigationConfig} variant="ghost-dark" />
    </div>
  </slot>
</CoreContentLayout>
