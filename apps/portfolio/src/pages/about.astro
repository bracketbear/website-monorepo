---
import { type Breadcrumb } from '@bracketbear/core';
import { getCollection } from 'astro:content';
import { getAboutBreadcrumbs } from '@/config/breadcrumbs';
import HeroLayout from '@/layouts/HeroLayout.astro';
import { marked } from 'marked';
import { getContentImageUrl } from '@bracketbear/astro-content';
import { Testimonial } from '@bracketbear/core/react';

const breadcrumbs: Breadcrumb[] = getAboutBreadcrumbs();

// Get the about page singleton (following the same pattern as index.astro)
const aboutPageEntries = await getCollection('portfolioAboutPage');
const aboutPage = aboutPageEntries[0]; // Singletons have only one entry

const t = aboutPage.data.testimonials[0];
---

<HeroLayout
  pageTitle="About"
  title={aboutPage.data.title}
  subtitle={aboutPage.data.subtitle}
  breadcrumbs={breadcrumbs}
  animationPreset="curious-particle-network"
  contactCTA={aboutPage.data.contactCTA}
  currentPage="about"
>
  <!-- Narrative Section -->
  {
    aboutPage?.data?.narrative && (
      <section class="px-content mb-8">
        <div class="container mx-auto text-center">
          <h2 class="font-heading text-foreground mb-6 text-5xl tracking-tight">
            {aboutPage.data.narrative.title}
          </h2>
        </div>
        <div class="container mx-auto mt-8">
          <div class="prose-2xl text-foreground/90 mx-auto max-w-prose">
            <Fragment
              set:html={marked.parse(aboutPage.data.narrative.content)}
            />
          </div>
        </div>
      </section>
    )
  }

  <!-- Timeline Section (after Narrative) -->
  {
    aboutPage?.data?.timeline && aboutPage.data.timeline.length > 0 && (
      <section class="px-content mt-24 mb-8">
        <div class="mx-auto max-w-6xl">
          <h2 class="font-heading text-foreground mb-10 text-center text-4xl tracking-tight">
            Timeline
          </h2>
          <ol class="grid grid-cols-1 gap-6 md:grid-cols-3">
            {aboutPage.data.timeline.map((item: any) => (
              <li class="md:border-border/10 relative flex flex-col gap-3 md:border-t md:pt-4">
                <div class="flex items-center gap-3">
                  <span class="bg-muted inline-block h-2 w-2 rounded-full" />
                  <div class="text-foreground text-lg font-semibold">
                    {item.label}
                  </div>
                </div>
                {item.sublabel && (
                  <div class="text-foreground/60 text-sm">{item.sublabel}</div>
                )}
                <p class="prose-lg text-foreground/80 md:line-clamp-2">
                  {item.description}
                </p>
              </li>
            ))}
          </ol>
        </div>
      </section>
    )
  }

  <!-- What I Do Now Section -->
  {
    aboutPage?.data?.whatIDoNow && (
      <section class="px-content mb-8">
        <div class="container mx-auto text-center">
          <h2 class="font-heading text-foreground mb-6 text-5xl tracking-tight">
            {aboutPage.data.whatIDoNow.title}
          </h2>
        </div>
        <div class="container mx-auto mt-8">
          <div class="prose-2xl text-foreground/90 mx-auto max-w-prose">
            <Fragment
              set:html={marked.parse(aboutPage.data.whatIDoNow.content)}
            />
          </div>
        </div>
      </section>
    )
  }

  <!-- Mid-page CTA (after What I do now) -->
  <section class="px-content mb-8">
    <div class="mx-auto max-w-4xl">
      <div
        class="bg-card/5 rounded-lg p-8 text-center backdrop-blur-sm md:p-10"
      >
        <p class="text-foreground/90 mb-6 text-xl leading-relaxed font-medium">
          Have something in mind?
        </p>
        <a href="/contact" class="button button-primary button-lg">
          Talk through your project
        </a>
      </div>
    </div>
  </section>

  <!-- How I Work/Partner Section -->
  {
    aboutPage?.data?.howIPartner && (
      <section class="px-content mb-8">
        <div class="mx-auto max-w-4xl text-center">
          <h2 class="font-heading text-foreground mb-8 text-5xl tracking-tight">
            {aboutPage.data.howIPartner.title}
          </h2>
        </div>
        <div class="mx-auto max-w-4xl">
          <ul class="text-foreground/90 list-none space-y-12 pl-6 text-xl font-medium">
            {aboutPage.data.howIPartner.items.map(
              (item: string, index: number) => (
                <li class="flex flex-col items-center gap-3">
                  <div class="bg-primary text-primary-foreground flex aspect-square w-10 items-center justify-center rounded-full">
                    {index + 1}
                  </div>
                  <div class="text-foreground/90 max-w-prose text-center text-xl">
                    {item}
                  </div>
                </li>
              )
            )}
          </ul>
        </div>
      </section>
    )
  }

  <!-- Testimonials Section (after How I partner) -->
  {
    aboutPage?.data?.testimonials && aboutPage.data.testimonials.length > 0 && (
      <section class="px-content mt-24 mb-8">
        <div class="mx-auto max-w-7xl">
          <Testimonial
            quote={t.quote}
            name={t.name}
            role={t.role}
            org={t.org}
            className="card"
            avatarUrl={
              t.avatar
                ? getContentImageUrl('sites/portfolio', 'about-page', t.avatar)
                : undefined
            }
            variant="dark"
          />
        </div>
      </section>
    )
  }

  <!-- Stories Section -->
  {
    aboutPage?.data?.stories && aboutPage.data.stories.length > 0 && (
      <section class="px-content mb-8">
        <div class="mx-auto max-w-7xl">
          <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
            {aboutPage.data.stories.map((story: any) => (
              <div class="border-border/20 bg-card/5 rounded-lg border p-4 backdrop-blur-sm md:p-6">
                <div class="text-foreground/60 font-semibold tracking-wider uppercase">
                  Case note
                </div>
                <h3 class="font-heading text-foreground mt-2 mb-4 text-2xl tracking-tight">
                  {story.headline}
                </h3>
                <div class="prose-lg text-foreground/90">
                  <Fragment set:html={marked.parse(story.content)} />
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>
    )
  }

  <!-- Principles Section -->
  {
    aboutPage?.data?.principles && (
      <section class="px-content mb-8">
        <div class="mx-auto max-w-4xl text-center">
          <h2 class="font-heading text-foreground mb-8 text-5xl tracking-tight">
            {aboutPage.data.principles.title}
          </h2>
        </div>
        <div class="mx-auto max-w-4xl">
          <ul class="text-foreground/90 space-y-4 text-xl font-medium">
            {aboutPage.data.principles.items.map((item: string) => (
              <li class="flex items-start gap-3">
                <span class="text-foreground mt-2 text-sm">•</span>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </section>
    )
  }

  <!-- Fit Section & How to start -->
  {
    aboutPage?.data?.fit && (
      <section class="px-content mb-8">
        <div class="mx-auto max-w-7xl">
          <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
            <div class="border-border/20 bg-card/5 rounded-lg border p-6 text-center backdrop-blur-sm md:text-left">
              <h3 class="font-heading text-foreground mb-4 text-2xl tracking-tight">
                Best fit
              </h3>
              <p class="text-foreground/80 text-lg leading-relaxed">
                {aboutPage.data.fit.bestFit}
              </p>
            </div>
            {aboutPage?.data?.howToStart && (
              <div class="border-border/20 bg-card/5 rounded-lg border p-6 text-center backdrop-blur-sm md:text-left">
                <h3 class="font-heading text-foreground mb-4 text-2xl tracking-tight">
                  {aboutPage.data.howToStart.title}
                </h3>
                <ul class="text-foreground/90 space-y-3 text-left">
                  {aboutPage.data.howToStart.items.map((item: string) => (
                    <li class="flex items-start gap-3">
                      <span class="text-foreground mt-2 text-sm">•</span>
                      <span>{item}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}
          </div>
        </div>
      </section>
    )
  }
</HeroLayout>

<style>
  /* Custom ordered list styling */
  ol {
    counter-reset: item;
  }

  ol > li {
    counter-increment: item;
  }

  ol > li::marker {
    content: counter(item, decimal-leading-zero);
    font-weight: bold;
    color: var(--color-foreground);
  }
</style>
