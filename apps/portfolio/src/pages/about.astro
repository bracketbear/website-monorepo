---
import { type Breadcrumb } from '@bracketbear/core';
import { getCollection } from 'astro:content';
import { getAboutBreadcrumbs } from '@/config/breadcrumbs';
import HeroLayout from '@/layouts/HeroLayout.astro';
import { marked } from 'marked';
import { getContentImageUrl } from '@bracketbear/astro-content';
import { Testimonial } from '@bracketbear/core/react';

const breadcrumbs: Breadcrumb[] = getAboutBreadcrumbs();

// Get the about page singleton (following the same pattern as index.astro)
const aboutPageEntries = await getCollection('portfolioAboutPage');
const aboutPage = aboutPageEntries[0]; // Singletons have only one entry
const testimonialMarkdown = await marked.parse(
  aboutPage.data.testimonials[0].quote
);
const t = aboutPage.data.testimonials[0];
---

<HeroLayout
  pageTitle="About"
  title={aboutPage.data.title}
  subtitle={aboutPage.data.subtitle}
  breadcrumbs={breadcrumbs}
  animationPreset="curious-particle-network"
  contactCTA={aboutPage.data.contactCTA}
>
  <!-- Narrative Section -->
  {
    aboutPage?.data?.narrative && (
      <section class="mb-40 px-content">
        <div class="container mx-auto text-center">
          <h2 class="font-heading mb-6 text-5xl tracking-tight text-foreground">
            {aboutPage.data.narrative.title}
          </h2>
        </div>
        <div class="container mx-auto mt-8">
          <div class="prose-2xl mx-auto max-w-prose text-foreground/90">
            <Fragment
              set:html={marked.parse(aboutPage.data.narrative.content)}
            />
          </div>
        </div>
      </section>
    )
  }

  <!-- Timeline Section (after Narrative) -->
  {
    aboutPage?.data?.timeline && aboutPage.data.timeline.length > 0 && (
      <section class="mt-24 mb-40 px-content">
        <div class="mx-auto max-w-6xl">
          <h2 class="font-heading mb-10 text-center text-4xl tracking-tight text-foreground">
            Timeline
          </h2>
          <ol class="grid grid-cols-1 gap-6 md:grid-cols-3">
            {aboutPage.data.timeline.map((item: any, idx: number) => (
              <li class="relative flex flex-col gap-3 md:border-t md:border-border/10 md:pt-4">
                <div class="flex items-center gap-3">
                  <span class="inline-block h-2 w-2 rounded-full bg-muted" />
                  <div class="text-lg font-semibold text-foreground">
                    {item.label}
                  </div>
                </div>
                {item.sublabel && (
                  <div class="text-sm text-foreground/60">{item.sublabel}</div>
                )}
                                  <p class="prose-lg text-foreground/80 md:line-clamp-2">
                    {item.description}
                  </p>
              </li>
            ))}
          </ol>
        </div>
      </section>
    )
  }

  <!-- What I Do Now Section -->
  {
    aboutPage?.data?.whatIDoNow && (
      <section class="mb-40 px-content">
        <div class="container mx-auto text-center">
          <h2 class="font-heading mb-6 text-5xl tracking-tight text-foreground">
            {aboutPage.data.whatIDoNow.title}
          </h2>
        </div>
        <div class="container mx-auto mt-8">
          <div class="prose-2xl mx-auto max-w-prose text-foreground/90">
            <Fragment
              set:html={marked.parse(aboutPage.data.whatIDoNow.content)}
            />
          </div>
        </div>
      </section>
    )
  }

  <!-- Mid-page CTA (after What I do now) -->
  <section class="mb-40 px-content">
    <div class="mx-auto max-w-4xl">
      <div
        class="rounded-lg bg-card/5 p-8 text-center backdrop-blur-sm md:p-10"
      >
                  <p class="mb-6 text-xl font-medium leading-relaxed text-foreground/90">
            Have something in mind?
          </p>
        <a href="/contact" class="button button-primary button-lg">
          Talk through your project
        </a>
      </div>
    </div>
  </section>

  <!-- How I Work/Partner Section -->
  {
    aboutPage?.data?.howIPartner && (
      <section class="mb-40 px-content">
        <div class="mx-auto max-w-4xl text-center">
          <h2 class="font-heading mb-8 text-5xl tracking-tight text-foreground">
            {aboutPage.data.howIPartner.title}
          </h2>
        </div>
        <div class="mx-auto max-w-4xl">
          <ul class="list-none space-y-12 pl-6 text-xl font-medium text-foreground/90">
            {aboutPage.data.howIPartner.items.map((item: string, index: number) => (
              <li class="flex flex-col items-center gap-3">
                <div class="flex aspect-square w-10 items-center justify-center rounded-full bg-primary text-primary-foreground">{index + 1}</div>
                <div class="max-w-prose text-center text-xl text-foreground/90">{item}</div>
              </li>
            ))}
          </ul>
        </div>
      </section>
    )
  }

  <!-- Testimonials Section (after How I partner) -->
  {
    aboutPage?.data?.testimonials && aboutPage.data.testimonials.length > 0 && (
      <section class="mt-24 mb-40 px-content">
        <div class=" mx-auto max-w-7xl">
            <Testimonial
              quote={t.quote}
              name={t.name}
              role={t.role}
              org={t.org}
              className="card"
              avatarUrl={
                t.avatar
                  ? getContentImageUrl(
                      'sites/portfolio',
                      'about-page',
                      t.avatar
                    )
                  : undefined
              }
              variant="dark"
              }
            />
        </div>
      </section>
    )
  }

  <!-- Stories Section -->
  {
    aboutPage?.data?.stories && aboutPage.data.stories.length > 0 && (
      <section class="mb-40 px-content">
        <div class="mx-auto max-w-7xl">
          <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
            {aboutPage.data.stories.map((story: any) => (
              <div class="rounded-lg border border-border/20 bg-card/5 p-4 backdrop-blur-sm md:p-6">
                <div class="font-semibold tracking-wider text-foreground/60 uppercase">
                  Case note
                </div>
                <h3 class="font-heading mt-2 mb-4 text-2xl tracking-tight text-foreground">
                  {story.headline}
                </h3>
                <div class="prose-lg text-foreground/90">
                  <Fragment set:html={marked.parse(story.content)} />
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>
    )
  }

  <!-- Principles Section -->
  {
    aboutPage?.data?.principles && (
      <section class="mb-40 px-content">
        <div class="mx-auto max-w-4xl text-center">
          <h2 class="font-heading mb-8 text-5xl tracking-tight text-foreground">
            {aboutPage.data.principles.title}
          </h2>
        </div>
        <div class="mx-auto max-w-4xl">
          <ul class="space-y-4 text-xl font-medium text-foreground/90">
            {aboutPage.data.principles.items.map((item: string) => (
              <li class="flex items-start gap-3">
                <span class="mt-2 text-sm text-foreground">•</span>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </section>
    )
  }

  <!-- Fit Section & How to start -->
  {
    aboutPage?.data?.fit && (
      <section class="mb-40 px-content">
        <div class="mx-auto max-w-7xl">
          <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
            <div class="rounded-lg border border-border/20 bg-card/5 p-6 text-center backdrop-blur-sm md:text-left">
              <h3 class="font-heading mb-4 text-2xl tracking-tight text-foreground">
                Best fit
              </h3>
              <p class="text-lg leading-relaxed text-foreground/80">
                {aboutPage.data.fit.bestFit}
              </p>
            </div>
            {aboutPage?.data?.howToStart && (
              <div class="rounded-lg border border-border/20 bg-card/5 p-6 text-center backdrop-blur-sm md:text-left">
                <h3 class="font-heading mb-4 text-2xl tracking-tight text-foreground">
                  {aboutPage.data.howToStart.title}
                </h3>
                <ul class="space-y-3 text-left text-foreground/90">
                  {aboutPage.data.howToStart.items.map((item: string) => (
                    <li class="flex items-start gap-3">
                      <span class="mt-2 text-sm text-foreground">•</span>
                      <span>{item}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}
          </div>
        </div>
      </section>
    )
  }
</HeroLayout>

<style>
  /* Custom ordered list styling */
  ol {
    counter-reset: item;
  }

  ol > li {
    counter-increment: item;
  }

  ol > li::marker {
    content: counter(item, decimal-leading-zero);
    font-weight: bold;
    color: var(--color-foreground);
  }
</style>
