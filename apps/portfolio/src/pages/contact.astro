---
import ContentLayout from '@/layouts/ContentLayout.astro';
import ContactForm from '@/components/ContactForm';
import { getContactBreadcrumbs } from '@/config/breadcrumbs';

const breadcrumbs = getContactBreadcrumbs();
---

<ContentLayout title="Reach Out" breadcrumbs={breadcrumbs}>
  <div class="border-default lg:grid lg:grid-cols-2">
    <div class="bg-brand-dark text-brand-light p-8">
      <h2 class="font-heading mb-2 text-3xl uppercase">
        Thank you for your interest!
      </h2>
      <p>
        I'm currently available for freelance and full-time work. If you're
        looking for a software engineer with a passion for building immersive
        experiences, I'd love to hear from you.
      </p>
      <p class="mt-4">
        Feel free to reach me via this form or via the links below.
      </p>
    </div>
    <div class="bg-brand-light p-8">
      <h2 class="font-heading mb-4 text-3xl uppercase">Contact Form</h2>
      <ContactForm client:load />
    </div>
  </div>
</ContentLayout>
