---
import { getCollection } from 'astro:content';
import { getKeyedCollection } from '@/utils/content';
import { getProjectUrl } from '@/utils/navigation';

const workProjects = await getCollection('workProject');
const workSkillsById = await getKeyedCollection('workSkills');
const workProjectCatergoriesById = await getKeyedCollection(
  'workProjectCategory'
);

const workProjectsByType = workProjects.reduce<
  Record<string, typeof workProjects>
>((acc, project) => {
  const { data } = project;
  const { category } = data;
  if (category === undefined) {
    return acc;
  }

  if (!(category in acc)) {
    acc[category] = [];
  }

  acc[category].push(project);
  return acc;
}, {});
---

<div class="space-y-16">
  {
    Object.entries(workProjectsByType).map(([type, projects]) => (
      <div>
        <h2 class="brutalist-border bg-cream mb-8 inline-block p-4 text-2xl font-black text-black uppercase">
          {workProjectCatergoriesById[type].data.title}
        </h2>
        <div class="grid gap-8 md:grid-cols-2">
          {projects.map((project) => (
            <a
              href={getProjectUrl(project.id)}
              class="brutalist-border bg-cream group block overflow-hidden transition-all hover:translate-x-[-2px] hover:translate-y-[-2px] hover:shadow-[6px_6px_0_0_#111111]"
            >
              {project.data.media && project.data.media.length > 0 && (
                <div class="aspect-video w-full overflow-hidden border-b-2 border-black">
                  <img
                    src={project.data.media[0]}
                    alt={project.data.title}
                    class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
                  />
                </div>
              )}
              <div class="p-6">
                <div class="mb-4 flex items-center justify-between">
                  <h3 class="text-xl font-black text-black uppercase">
                    {project.data.title}
                  </h3>
                  {project.data.isFeatured && (
                    <span class="brutalist-border bg-coral px-3 py-1 text-sm font-bold text-black">
                      Featured
                    </span>
                  )}
                </div>
                <p class="mb-4 font-bold text-black">
                  {project.data.description}
                </p>
                {project.data.skills && project.data.skills.length > 0 && (
                  <div>
                    <div class="mb-2 text-sm font-bold text-black uppercase">
                      Technologies
                    </div>
                    <div class="flex flex-wrap gap-2">
                      {project.data.skills.map(
                        (skillId) =>
                          workSkillsById[skillId] !== undefined && (
                            <span class="brutalist-border-light bg-cream px-3 py-1 text-sm font-bold text-black">
                              {workSkillsById[skillId].data.title}
                            </span>
                          )
                      )}
                    </div>
                  </div>
                )}
              </div>
            </a>
          ))}
        </div>
      </div>
    ))
  }
</div>
