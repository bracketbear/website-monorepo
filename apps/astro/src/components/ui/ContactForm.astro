---
interface Props {
  class?: string;
}

const { class: className } = Astro.props satisfies Props;
---

<section class:list={['py-24', className]}>
  <div class="container mx-auto px-6">
    <div class="brutalist-border bg-background p-8">
      <div class="mb-8">
        <h2 class="text-foreground mb-4 text-4xl font-black uppercase">
          Contact Me
        </h2>
        <p class="text-foreground text-xl font-bold">
          Have a project in mind? I'd love to hear about it. Drop me a message
          and I'll get back to you as soon as possible.
        </p>
      </div>

      <form class="space-y-6" action="#" method="POST">
        <div class="grid gap-6 md:grid-cols-2">
          <div>
            <label
              for="name"
              class="text-foreground mb-2 block text-sm font-black uppercase"
            >
              Name
            </label>
            <input
              type="text"
              name="name"
              id="name"
              required
              class="brutalist-border-light bg-background text-foreground placeholder-foreground/50 focus:ring-foreground w-full p-3 font-bold focus:ring-2 focus:outline-none"
              placeholder="Your name"
            />
          </div>
          <div>
            <label
              for="email"
              class="text-foreground mb-2 block text-sm font-black uppercase"
            >
              Email
            </label>
            <input
              type="email"
              name="email"
              id="email"
              required
              class="brutalist-border-light bg-background text-foreground placeholder-foreground/50 focus:ring-foreground w-full p-3 font-bold focus:ring-2 focus:outline-none"
              placeholder="your@email.com"
            />
          </div>
        </div>

        <div>
          <label
            for="subject"
            class="text-foreground mb-2 block text-sm font-black uppercase"
          >
            Subject
          </label>
          <input
            type="text"
            name="subject"
            id="subject"
            required
            class="brutalist-border-light bg-background text-foreground placeholder-foreground/50 focus:ring-foreground w-full p-3 font-bold focus:ring-2 focus:outline-none"
            placeholder="What's this about?"
          />
        </div>

        <div>
          <label
            for="message"
            class="text-foreground mb-2 block text-sm font-black uppercase"
          >
            Message
          </label>
          <textarea
            name="message"
            id="message"
            rows="6"
            required
            class="brutalist-border-light bg-background text-foreground placeholder-foreground/50 focus:ring-foreground w-full p-3 font-bold focus:ring-2 focus:outline-none"
            placeholder="Tell me about your project..."></textarea>
        </div>

        <div class="flex justify-end">
          <button
            type="submit"
            class="brutalist-border bg-primary text-foreground px-8 py-3 text-lg font-black uppercase transition-all hover:translate-x-[-2px] hover:translate-y-[-2px] hover:shadow-[6px_6px_0_0_var(--color-shadow)]"
          >
            Send Message
          </button>
        </div>
      </form>
    </div>
  </div>
</section>

<style>
  .container {
    max-width: 1200px;
  }

  /* Add a subtle floating animation to the form container */
  .rounded-2xl {
    animation: float 6s ease-in-out infinite;
  }

  @keyframes float {
    0% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
    100% {
      transform: translateY(0px);
    }
  }

  /* Gradient animation */
  @keyframes gradient-shift {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
</style>
