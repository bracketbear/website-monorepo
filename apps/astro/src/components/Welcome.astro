---
import "@fontsource/fontdiner-swanky";
import Logo from "../assets/bracket-bear-logo.svg";
import Button from "../components/atoms/Button.astro";
---

<div
  class="parchment flex h-full flex-col items-center justify-center bg-[#ca6702]"
>
  <div
    class="animated-blob hard-shadow flex flex-col gap-1 rounded-4xl border-4 border-[#94d2bd] bg-[#0a9396] p-24 bg-blend-color-burn"
  >
    <Logo class="glowing-text h-10" />
    <div class="glowing-text -rotate-6 p-8">
      <div class="text-center text-6xl">Experiential</div>
      <div class="text-center text-6xl">Full-Stack</div>
      <div class="text-center text-6xl">Engineer</div>
    </div>
    <div class="flex flex-col justify-center gap-2 *:min-w-48 md:flex-row">
      <Button variant="outlineLight">Learn More</Button>
      <Button variant="secondary">Let's Work Together</Button>
    </div>
  </div>
</div>

<style>
  @keyframes blob {
    0% {
      border-radius: 40% 60% 70% 30% / 30% 50% 50% 70%;
    }
    25% {
      border-radius: 55% 45% 65% 35% / 35% 55% 45% 65%;
    }
    50% {
      border-radius: 60% 40% 50% 50% / 40% 60% 60% 40%;
    }
    75% {
      border-radius: 45% 55% 35% 65% / 65% 35% 55% 45%;
    }
    100% {
      border-radius: 40% 60% 70% 30% / 30% 50% 50% 70%;
    }
  }

  .animated-blob {
    animation: blob 16s infinite ease-in-out alternate;
  }

  .parchment {
    position: absolute;
    display: flex;
    width: 100%;
    box-shadow:
      2px 3px 20px black,
      0 0 125px #8f5922 inset;
    filter: url(#wavy2);
    background-image: url(data:image/png;base64,);
  }

  .hard-shadow {
    box-shadow: 2rem 2rem 0 rgb(155, 34, 38, 0.5);
  }

  :root {
    --glowing-text-primary: #001219;
    --glowing-text-secondary: #005f73;
    --glowing-text-shadow: #e9d8a6;
  }

  .glowing-text {
    background: linear-gradient(
      90deg,
      var(--glowing-text-primary),
      var(--glowing-text-secondary)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: groovy-text 1.5s infinite alternate;
    /* font-family: 'Saira Stencil One', system-ui; */
    font-family: "Fontdiner Swanky", system-ui;
    /* text-transform: uppercase; */
    text-shadow: 0.25rem 0.25rem 0rem var(--glowing-text-shadow);
  }
  @keyframes groovy-text {
    0% {
      text-shadow: 0.25rem 0.25rem 0rem var(--glowing-text-shadow);
    }
    100% {
      text-shadow: 0.5rem 0.5rem 0rem var(--glowing-text-shadow);
    }
  }
</style>
