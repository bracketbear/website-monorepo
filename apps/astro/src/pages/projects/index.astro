---
import Layout from '@/layouts/Layout.astro';
import ProjectCardList from '@/components/ProjectCardList.astro';
---

<Layout>
  <title>Projects | Bracket Bear</title>

  <!-- Header -->
  <div class="bg-cream py-24">
    <div class="container mx-auto px-6">
      <div class="brutalist-border bg-cream mb-8 inline-block p-8">
        <h1 class="text-foreground text-5xl font-black uppercase">Projects</h1>
      </div>
      <p class="text-foreground max-w-3xl text-xl font-bold">
        Here's a collection of projects I've worked on. Each one represents a
        unique challenge and opportunity to create something meaningful.
      </p>
    </div>
  </div>

  <!-- Project List -->
  <div class="bg-cream py-16">
    <div class="container mx-auto px-6">
      <ProjectCardList />
    </div>
  </div>
</Layout>
