---
import Layout from '@/layouts/Layout.astro';
import Hero from '@/components/Hero.astro';
import ProjectCardList from '@/components/ProjectCardList.astro';
import Philosophy from '@/components/Philosophy.astro';
import About from '@/components/About.astro';
import WorkTimeline from '@/components/WorkTimeline.astro';
import WorkTimelineGradientWrapper from '@/components/WorkTimelineGradientWrapper.astro';
import RetrowaveHeading from '@/components/RetrowaveHeading.astro';
---

<Layout>
  <div>
    <title>Welcome to Bracket Bear</title>
    <Hero />
    <About />
    <Philosophy />
    <div class="grid grid-cols-2 gap-4 border-y-8 border-solid border-white">
      <div
        class="sticky top-0 flex h-screen flex-col justify-center bg-red-600 p-8 text-right"
      >
        <div class="text-4xl font-bold text-white">
          Here are some of the projects I've been lucky enough to work on.
        </div>
      </div>
      <ProjectCardList />
    </div>
    <WorkTimelineGradientWrapper>
      <div class="py-[50vh]">
        <RetrowaveHeading
          title="Work History"
          subtitle="Neon dreams and neon lights"
        />
        <div class="container mx-auto">
          <WorkTimeline />
        </div>
      </div>
    </WorkTimelineGradientWrapper>
  </div>
</Layout>
