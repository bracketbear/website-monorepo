{
  "name": "@bracketbear/ui-kit",
  "type": "module",
  "version": "0.0.1",
  "description": "Shared UI components for BracketBear applications",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./astro": {
      "import": "./dist/astro/index.js",
      "types": "./dist/astro/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    },
    "./styles": "./dist/styles/bracketbear.tailwind.css",
    "./styles/*": "./dist/styles/*"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && cpx \"src/styles/**/*\" dist/styles",
    "dev": "concurrently \"tsc --watch\" \"npm run copy:astro:watch\" \"npm run copy:styles:watch\"",
    "clean": "rm -rf dist",
    "copy:astro:watch": "cpx \"src/astro/**/*\" dist/astro --watch",
    "copy:styles:watch": "cpx \"src/styles/**/*\" dist/styles --watch"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "astro": "^5.6.0",
    "clsx": "^2.1.1",
    "concurrently": "^8.2.0",
    "cpx": "^1.5.0",
    "react": "^19.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "react-dom": "^19.0.0"
  }
}