{
  "name": "@bracketbear/ui-kit",
  "type": "module",
  "version": "0.0.1",
  "description": "Shared UI components for BracketBear applications",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./astro": "./src/astro/index.ts",
    "./react": {
      "import": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    },
    "./styles": {
      "import": "./dist/styles/index.js",
      "types": "./dist/styles/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "concurrently \"tsc --watch\" \"npm run copy:astro:watch\"",
    "clean": "rm -rf dist",
    "copy:astro:watch": "cpx \"src/astro/**/*\" dist/astro --watch"
  },
  "dependencies": {
    "astro": "^5.6.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "concurrently": "^8.2.0",
    "cpx": "^1.5.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "astro": "^5.6.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
} 