---
import type { LayoutProps } from '../../types/layout';
import { LAYERS } from '../../types/layers';
import NavBar from '../components/NavBar.astro';
import Footer from '../components/Footer.astro';

export interface Props extends LayoutProps {
  contactForm?: any;
  metaDescription?: string;
  description?: string;
  class?: string;
  navigationVariant?: 'default' | 'ghost-dark' | 'ghost-light' | 'glass';
}

const {
  title,
  hideContactForm = false,
  hideFooter = false,
  hideNavigation = false,
  navigation,
  contactForm: ContactFormComponent,
  breadcrumbs,
  metaDescription,
  description,
  class: className,
  navigationVariant,
} = Astro.props;

// Use description if provided, otherwise fall back to metaDescription
const finalMetaDescription = description || metaDescription;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    {title && <title>{title}</title>}
    {
      finalMetaDescription && (
        <meta name="description" content={finalMetaDescription} />
      )
    }
  </head>
  <body class="min-h-screen transition-colors duration-300">
    <!-- Background Layer -->
    <div style={`z-index: ${LAYERS.background};`} class="pointer-events-none">
      <slot name="background" />
    </div>

    <!-- Content Layer (default slot) -->
    <div style={`z-index: ${LAYERS.content};`} class={className}>
      {
        !hideNavigation && (
          <NavBar
            config={{
              ...navigation,
              breadcrumbs: breadcrumbs,
            }}
            variant={navigationVariant}
          />
        )
      }
      <slot />
      {
        !hideContactForm && ContactFormComponent && (
          <ContactFormComponent class="bg-primary z-10 py-36" />
        )
      }
      {!hideFooter && <Footer config={navigation} />}
    </div>

    <!-- Foreground Layer (mouse effects, overlays) -->
    <div style={`z-index: ${LAYERS.foreground};`} class="pointer-events-none">
      <slot name="foreground" />
    </div>

    <style>
      html,
      body {
        margin: 0;
        width: 100%;
      }
    </style>
  </body>
</html>
