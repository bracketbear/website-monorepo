---
import type { NavigationConfig } from '../../types/navigation.js';
import { NAVIGATION_CONSTANTS } from '../../utils/constants.js';
import Button from '../atoms/Button.astro';

interface Props {
  config: NavigationConfig;
  variant?: 'default' | 'ghost-dark' | 'ghost-light';
  class?: string;
}

const { config, variant = 'default', class: className } = Astro.props;
const { items: navItems, branding, socialLinks } = config;
---

<nav
  class:list={[
    'flex min-h-20 items-center border-y-2 px-4',
    variant === 'ghost-dark'
      ? 'absolute top-0 right-0 left-0 z-50 border-transparent bg-transparent'
      : 'border-brand-dark bg-brand-orange',
    className,
  ]}
>
  <div class="container mx-auto flex h-full items-center justify-between py-4">
    <!-- Logo Section -->
    <div class="flex items-center gap-4">
      {
        branding?.logo && (
          <div class="flex h-16 w-16 items-center justify-center">
            <img src={branding.logo} alt={branding.name} class="text-white" />
          </div>
        )
      }
      <div
        class:list={[
          'font-heading text-2xl leading-5.5 font-black tracking-wider uppercase',
          variant === 'ghost-dark' ? 'text-white' : 'text-brand-dark',
        ]}
      >
        <a
          href={branding?.href || '/'}
          class:list={[
            variant === 'ghost-dark'
              ? 'hover:text-brand-light'
              : 'hover:text-brand-dark/80',
            'transition-colors',
          ]}
        >
          {branding?.name || 'Brand'}
        </a>
      </div>
    </div>

    <!-- Desktop Navigation -->
    <div class="hidden items-center gap-8 md:flex">
      <ul class="flex items-center gap-8">
        {
          navItems.map((item) => (
            <li class="group relative flex items-center">
              {item.children != null &&
              Array.isArray(item.children) &&
              item.children.length > 0 ? (
                <div class="flex items-center">
                  <button
                    class:list={[
                      'group font-heading relative inline-flex items-center font-black tracking-wide uppercase transition-colors',
                      variant === 'ghost-dark'
                        ? 'hover:text-brand-light text-white'
                        : 'text-brand-dark hover:text-brand-dark/80',
                    ]}
                  >
                    {item.name}
                    <svg
                      class="ml-1 h-4 w-4"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M19 9l-7 7-7-7"
                      />
                    </svg>
                  </button>
                  <div class="invisible absolute left-0 z-50 mt-2 w-48 opacity-0 transition-all duration-300 group-hover:visible group-hover:opacity-100">
                    <div
                      class:list={[
                        'border-brand-dark py-4 shadow-[8px_8px_0_0_var(--color-brand-dark)]',
                        variant === 'ghost-dark'
                          ? 'bg-brand-dark'
                          : 'bg-brand-light',
                      ]}
                    >
                      {item.children.map((child) => (
                        <a
                          href={child.href}
                          class:list={[
                            'font-heading block px-4 py-4 text-sm font-black tracking-wide uppercase transition-colors',
                            variant === 'ghost-light'
                              ? 'hover:bg-brand-light hover:text-brand-dark text-white'
                              : 'text-brand-dark hover:bg-brand-dark hover:text-brand-light',
                          ]}
                        >
                          {child.name}
                        </a>
                      ))}
                    </div>
                  </div>
                </div>
              ) : (
                <a
                  class:list={[
                    'group link-underline font-heading relative font-black tracking-wide uppercase transition-all text-shadow-lg',
                    variant === 'ghost-dark'
                      ? 'hover:text-brand-light text-white'
                      : 'text-brand-dark hover:text-brand-dark/80',
                  ]}
                  href={item.href}
                >
                  {item.name}
                </a>
              )}
            </li>
          ))
        }
      </ul>

      <!-- Theme and Social Links -->
      <div class="flex items-center gap-4">
        {
          socialLinks?.linkedin && (
            <a
              href={socialLinks.linkedin}
              class:list={[
                'flex h-10 w-10 items-center justify-center transition-all hover:translate-x-[-2px] hover:translate-y-[-2px] hover:shadow-[4px_4px_0_0_var(--color-brand-dark)]',
                variant === 'ghost-dark'
                  ? 'hover:text-brand-light text-white'
                  : 'text-brand-dark hover:text-brand-dark/80',
              ]}
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="currentColor"
                class:list={[
                  variant === 'ghost-dark' ? 'text-white' : 'text-brand-dark',
                ]}
              >
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
              </svg>
            </a>
          )
        }
      </div>
    </div>

    <!-- Mobile Menu Button -->
    <Button
      class="p-2 md:hidden"
      variant="dark"
      id="mobile-menu-button"
      type="button"
    >
      <svg
        class="h-6 w-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </Button>
  </div>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="border-brand-dark bg-brand-light fixed top-0 right-0 z-40 h-screen w-4/5 max-w-sm translate-x-full transform overflow-y-auto transition-transform duration-300"
  >
    <div class="p-6">
      <div>
        <div
          class="text-brand-dark font-heading text-4xl font-black tracking-wide uppercase"
        >
          Navigation
        </div>
      </div>
      <Button
        id="close-menu-button"
        class="absolute top-4 right-4"
        variant="dark"
        type="button"
        size="sm"
      >
        <svg
          class="h-6 w-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </Button>

      <ul class="mt-8">
        {
          navItems.map((item) => (
            <li>
              {item.children != null &&
              Array.isArray(item.children) &&
              item.children.length > 0 ? (
                <div class="space-y-2">
                  <div class="text-brand-dark font-heading font-black tracking-wide uppercase">
                    {item.name}
                  </div>
                  <ul class="space-y-2 pl-4">
                    {item.children.map((child) => (
                      <li>
                        <a
                          href={child.href}
                          class="text-brand-dark font-heading block font-bold tracking-wide uppercase transition-transform hover:translate-x-1"
                        >
                          {child.name}
                        </a>
                      </li>
                    ))}
                  </ul>
                </div>
              ) : (
                <a href={item.href}>
                  <div class="text-brand-dark font-heading block py-4 text-2xl font-black tracking-wide uppercase transition-transform hover:translate-x-1">
                    {item.name}
                  </div>
                </a>
              )}
            </li>
          ))
        }
      </ul>

      <!-- Mobile Theme and Social Links -->
      <div class="mt-8 flex items-center gap-4">
        {
          socialLinks?.linkedin && (
            <a
              href={socialLinks.linkedin}
              class="flex h-10 w-10 items-center justify-center transition-all hover:translate-x-[-2px] hover:translate-y-[-2px] hover:shadow-[4px_4px_0_0_var(--color-brand-dark)]"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="text-brand-dark"
              >
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
              </svg>
            </a>
          )
        }
      </div>
    </div>
  </div>

  <!-- Mobile Menu Overlay -->
  <div
    id="mobile-menu-overlay"
    class="fixed inset-0 z-30 hidden bg-black/60 opacity-0 transition-opacity duration-300"
    style="background-image: radial-gradient(circle at 2px 2px, rgba(0,0,0,0.4) 1px, transparent 1px); background-size: 8px 8px;"
  >
  </div>
</nav>

<script>
  function setupMobileMenu() {
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const closeMenuButton = document.getElementById('close-menu-button');
    const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');

    // Only proceed if we have the required elements
    if (
      !mobileMenu ||
      !mobileMenuButton ||
      !closeMenuButton ||
      !mobileMenuOverlay
    ) {
      console.warn('Mobile menu elements not found');
      return;
    }

    const openMenu = () => {
      mobileMenu.classList.remove('translate-x-full');
      mobileMenuOverlay.classList.remove('hidden', '-z-30');
      setTimeout(() => {
        mobileMenuOverlay.classList.add('opacity-50', 'z-30');
      }, 10);
    };

    const closeMenu = () => {
      mobileMenu.classList.add('translate-x-full');
      mobileMenuOverlay.classList.remove('opacity-50', 'z-30');
      setTimeout(() => {
        mobileMenuOverlay.classList.add('hidden', '-z-30');
      }, 300);
    };

    // Add event listeners
    mobileMenuButton.addEventListener('click', (e) => {
      e.stopPropagation();
      openMenu();
    });

    closeMenuButton.addEventListener('click', (e) => {
      e.stopPropagation();
      closeMenu();
    });

    mobileMenuOverlay.addEventListener('click', (e) => {
      e.stopPropagation();
      closeMenu();
    });

    // Only close menu when clicking outside AND menu is open
    document.addEventListener('click', (e) => {
      const target = e.target as Node;
      const isMenuOpen = !mobileMenu.classList.contains('translate-x-full');

      if (
        isMenuOpen &&
        !mobileMenu.contains(target) &&
        !mobileMenuButton.contains(target)
      ) {
        closeMenu();
      }
    });
  }

  // Run setup when the DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', setupMobileMenu);
  } else {
    setupMobileMenu();
  }
</script>
