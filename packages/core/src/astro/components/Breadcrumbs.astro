---
import type { Breadcrumb } from '../../types/breadcrumb';

const SEPARATOR = '/' as const;

interface Props {
  breadcrumbs: Breadcrumb[];
}

const { breadcrumbs } = Astro.props;
---

{
  breadcrumbs.length > 0 && (
    <div class="bg-brand-dark">
      <div class="container mx-auto px-6 py-4">
        <nav class="anton text-sm">
          <ol class="flex items-center space-x-2">
            {breadcrumbs.map((crumb, idx) => (
              <>
                <li>
                  {crumb.href ? (
                    <a
                      href={crumb.href}
                      aria-label={crumb.label}
                      title={crumb.label}
                      class="text-brand-yellow hover:text-brand-yellow/80 font-bold tracking-wide transition-colors"
                    >
                      {crumb.label}
                    </a>
                  ) : (
                    <span class="text-brand-dark font-bold tracking-wide">
                      {crumb.label}
                    </span>
                  )}
                </li>
                {idx < breadcrumbs.length - 1 && (
                  <li class="text-brand-red font-black">{SEPARATOR}</li>
                )}
              </>
            ))}
          </ol>
        </nav>
      </div>
    </div>
  )
}
