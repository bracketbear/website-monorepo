---
import type { NavigationConfig } from '../../types/navigation.js';

interface Props {
  class?: string;
  config: NavigationConfig;
  copyrightText?: string;
}

const { config, class: className, copyrightText } = Astro.props;
const { items: navItems, branding, socialLinks } = config;
const thisYear = new Date().getFullYear();
---

<footer
  class="bg-brand-dark text-background relative z-10 py-40 transition-colors duration-300"
  class:list={[className]}
>
  <div class="container mx-auto px-4">
    <div class="flex flex-col items-center">
      <!-- Logo/Brand -->
      {
        branding?.logo ? (
          <div class="bg-background flex h-32 w-32 items-center justify-center">
            <img
              src={branding.logo}
              alt={branding.name}
              class="text-foreground h-1/2 transition-colors duration-300"
            />
          </div>
        ) : (
          <div class="font-heading text-center text-6xl font-black tracking-wide uppercase">
            <span class="text-background w-full">
              {branding?.name || 'Brand'}
            </span>
          </div>
        )
      }

      <!-- Navigation -->
      <nav class="mt-16 w-full max-w-4xl">
        <ul
          class="flex flex-col flex-wrap items-center justify-center gap-x-16 gap-y-8 md:flex-row"
        >
          {
            navItems.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="group text-background link-underline relative text-xl font-black uppercase transition-colors duration-300"
                >
                  {item.name}
                </a>
              </li>
            ))
          }
        </ul>
      </nav>

      <!-- Social Links -->
      {
        (socialLinks?.github || socialLinks?.linkedin) && (
          <div class="mt-16 flex gap-8">
            {socialLinks?.github && (
              <a
                href={socialLinks.github}
                target="_blank"
                rel="noopener noreferrer"
                class="border-default flex h-12 w-12 items-center justify-center transition-all hover:translate-x-[-2px] hover:translate-y-[-2px] hover:shadow-[4px_4px_0_0_#F5F5DC]"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  class="transition-colors duration-300"
                >
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                </svg>
              </a>
            )}
            {socialLinks?.linkedin && (
              <a
                href={socialLinks.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="border-default flex h-12 w-12 items-center justify-center transition-all hover:translate-x-[-2px] hover:translate-y-[-2px] hover:shadow-[4px_4px_0_0_#F5F5DC]"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  class="transition-colors duration-300"
                >
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
                </svg>
              </a>
            )}
          </div>
        )
      }

      <!-- Copyright -->
      <div
        class="text-background/80 mt-16 text-sm font-black transition-colors duration-300"
      >
        {
          copyrightText ||
            `Copyright Â©2018-${thisYear} ${branding?.name || 'Brand'}. All rights reserved.`
        }
      </div>
    </div>
  </div>
</footer>
