---
import { LabelValue } from '../../types';

type Props = Partial<LabelValue>;

const { label, value } = Astro.props;
---

<div class="flex h-full flex-col items-start gap-0.5">
  <div class="text-brand-yellow/80 font-medium uppercase">
    {label}:
  </div>
  <div class="text-brand-yellow text-lg font-bold">
    <slot name="value">
      {value}
    </slot>
  </div>
</div>
