---
interface Props {
  label: string;
  value: string;
}

const { label, value } = Astro.props;
---

<div class="flex flex-col gap-0.5">
  <div class="text-brand-yellow/80 font-medium uppercase">
    {label}:
  </div>
  <div class="text-brand-yellow text-lg font-bold">
    {value}
  </div>
</div>

