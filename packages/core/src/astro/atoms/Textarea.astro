---
interface Props {
  name: string;
  label: string;
  placeholder?: string;
  required?: boolean;
  class?: string;
  rows?: number;
}

const {
  name,
  label,
  placeholder,
  required = false,
  class: className,
  rows = 6,
} = Astro.props;
---

<div class="form-control group">
  <label class="label">
    <span class="form-label">{label}</span>
    {required && <span class="form-required">*</span>}
  </label>
  <textarea
    name={name}
    placeholder={placeholder}
    rows={rows}
    class:list={['form-input', className]}
    required={required}></textarea>
</div>
