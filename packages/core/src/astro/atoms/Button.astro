---
import {
  buttonVariantClasses,
  buttonSizeClasses,
  type ButtonVariant,
  type ButtonSize,
} from '../../utils/button-classes';

interface Props {
  type?: 'button' | 'submit' | 'reset';
  variant?: ButtonVariant;
  size?: ButtonSize;
  class?: string;
  disabled?: boolean;
}

const {
  type = 'button',
  variant = 'primary',
  size = 'md',
  class: className,
  disabled = false,
} = Astro.props;
---

<button
  type={type}
  class:list={[
    'button',
    // Disabled state overrides hover effects
    disabled ? 'button-disabled' : 'button-interactive',
    buttonVariantClasses[variant],
    buttonSizeClasses[size],
    className,
  ]}
  disabled={disabled}
>
  <slot />
</button>
