---
import {
  buttonVariantClasses,
  buttonSizeClasses,
  type ButtonVariant,
  type ButtonSize,
} from '../../utils/button-classes';

interface Props {
  type?: 'button' | 'submit' | 'reset';
  variant?: ButtonVariant;
  size?: ButtonSize;
  iconButton?: boolean;
  disabled?: boolean;
  class?: string;
  id?: string;
  role?: string;
}

const {
  class: className,
  type = 'button',
  variant = 'primary',
  size = 'md',
  iconButton = false,
  disabled = false,

  ...props
} = Astro.props;
---

<button
  type={type}
  class:list={[
    'button',
    disabled ? 'button-disabled' : 'button-interactive',
    iconButton ? 'button-icon' : '',
    buttonVariantClasses[variant],
    buttonSizeClasses[size],
    className,
  ]}
  disabled={disabled}
  {...props}
>
  <slot />
</button>
